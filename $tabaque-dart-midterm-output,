import 'dart:io';
import 'dart:math';


String getPlayerMove(){
print("What's your pick? \n");
String selection = stdin.readLineSync().toLowerCase();


switch (selection){
  case "papel":
    return "Papel ğŸ“ƒ";
    break;
  case "gunting":
    return "Gunting âœ‚ï¸";
    break;
  case "bato":
    return "Bato ğŸ‘Š";
